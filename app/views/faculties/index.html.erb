<div class="row">
  <div class="col-md-10">
    <h1>Faculties</h1>
  </div>
  <% if current_user.is_admin? %>
    <div class="col-md-2">
      <h1>
        <%= link_to 'New Faculty', new_faculty_path, class: "btn btn-default btn-md" %>
      </h1>
    </div>
  <% end %>
  <div class="row">
  <div class="col-md-10"></div>
  <div class="col-md-2 text-right">
    <%= form_tag faculties_path, method: "get" do |f| %>
      <div class="input-group">
        <input type="text" name="search" class="form-control search" placeholder="Search for..." value="<%= @search %>" autocomplete="off" id= "faculty">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Ok</button>
        </span>
      </div>
    <% end %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Date of join</th>
      <th>Trade</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faculties.each do |faculty| %>
      <tr>
        <td><%= faculty.first_name %></td>
        <td><%= faculty.last_name %></td>
        <td><%= faculty.date_of_birth %></td>
        <td><%= faculty.date_of_join %></td>
        <td><%= faculty.try(:trade).try(:name) %></td>
        <td><%= faculty.gender%></td>
        <td><%= faculty.address %></td>
        <td><%= faculty.salary %></td>
        <td class="text-right">
          <%= link_to 'Show', faculty, class: "btn btn-info btn-xs" %>
          <%= link_to 'Edit', edit_faculty_path(faculty), class: "btn btn-warning btn-xs" %>
          <%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-right">
  <%= paginate @faculties %>
</div>
