<%= form_for(@student_faculty , html: { class: "form-horizontal form-label-left"}) do |f| %>
  <h4>Student Details</h4>
  <span class="clearfix"></span>
  <div class="ln_solid"></div>

  <div class="form-group text-left">
    <label class="control-label col-md-2 col-sm-2 col-xs-12">
      Student:
    </label>
    <div class="col-md-3 col-sm-3 col-xs-12 dropdown" >
    <%= f.select :student_id , select_student_data , {prompt: "---Select Student---"}, required: :required , class: "form-control"%>
    </div>
  </div>

  <div class="form-group text-left">
    <label class="control-label col-md-2 col-sm-2 col-xs-12">
      Faculty:
    </label>
    <div class="col-md-3 col-sm-3 col-xs-12 dropdown" >
    <%= f.select :faculty_id , select_faculty_data , {prompt: "---Select Faculties---"}, required: :required , class: "form-control"%>
    </div>
  </div>

  <span class="clearfix"></span>

  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-3 col-sm-3 col-xs-12 col-md-offset-2">
      <a href="<%= student_faculties_path %>" class="btn btn-warning", type="button">Cancel</a>
      <button class="btn btn-primary" type="submit" data-disable-with="Saving...">Save</button>
    </div>
  </div>
<% end %>
