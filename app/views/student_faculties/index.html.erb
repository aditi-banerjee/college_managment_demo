<div class="row">
  <div class="col-md-10">
    <h1>Student Faculties</h1>
  </div>
  <% if current_user.is_admin? %>
    <div class="col-md-2">
      <h1>
        <%= link_to 'New Student Faculty', new_student_faculty_path, class: "btn btn-default btn-md" %>
      </h1>
    </div>
  <% end %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Student</th>
      <th>Faculty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_faculties.each do |student_faculty| %>
      <tr>
        <td><%= student_faculty.try(:student).try(:first_name) %></td>
        <td><%= student_faculty.try(:faculty).try(:first_name) %></td>
        <td class="text-right">
          <%= link_to 'Show', student_faculty, class: "btn btn-info btn-xs" %>
          <% if current_user.admin? %>
            <%= link_to 'Edit', edit_student_faculty_path(student_faculty), class: "btn btn-warning btn-xs" %>
            <%= link_to 'Destroy', student_faculty, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-right">
  <%= paginate @student_faculties %>
</div>
