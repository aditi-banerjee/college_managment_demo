<div class="row">
  <div class="col-md-9">
    <h1>Applied for Jobs</h1>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Contact number</th>
      <th>Address</th>
      <th>Trade</th>
      <th>Qualification</th>
      <th>Percentage</th>
      <th>Date of birth</th>
      <th>Passing year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apply_jobs.each do |apply_job| %>
      <tr>
        <td><%= apply_job.first_name %></td>
        <td><%= apply_job.last_name %></td>
        <td><%= apply_job.gender %></td>
        <td><%= apply_job.email %></td>
        <td><%= apply_job.contact_number %></td>
        <td><%= apply_job.address %></td>
        <td><%= apply_job.try(:trade).try(:name) %></td>
        <td><%= apply_job.qualification %></td>
        <td><%= apply_job.percentage %></td>
        <td><%= apply_job.date_of_birth %></td>
        <td><%= apply_job.passing_year %></td>
        <td class="text-right">
          <%= link_to 'Show', apply_job, class: "btn btn-info btn-xs" %>
          <%= link_to 'Edit', edit_apply_job_path(apply_job), class: "btn btn-warning btn-xs" %>
          <%= link_to 'Destroy', apply_job, class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-right">
  <%= paginate @apply_jobs %>
</div>