<h2>Log In</h2>
<%= render "devise/shared/links" %>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true ,placeholder:"Email" , required: :required %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder:"Password", required: :required %>
  </div>

  <div class="field">
    <button class="btn btn-primary" type="submit">LogIn</button>
  </div>

  <div class="links">
    <p>
      Are You New to Site?
      <%= link_to "Sign up", new_registration_path(resource_name) %>
    </p>
  </div>

  <div class="links">
    <p>
      Forgot Your Password?
      <%= link_to "New password?", new_password_path(resource_name) %>
    </p>
  </div>
<% end %>
